
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container position-relative ">
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="toast position-absolute show"
             style="top: 1rem; right: 1rem; z-index: 99999; border-radius: 5px; opacity: 0.95">
            <div class="toast-header bg-danger text-white">
                <strong class="me-auto">Thông báo</strong>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <p>@TempData["ErrorMessage"]</p>
            </div>
        </div>
    }
    <!-- Outer Row -->
    <div class="row justify-content-center container">

        <div class="col-xl-10 col-lg-12 col-md-9 justify-content-center">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">

                        <div class="col-lg-7" style="margin: 0 auto">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h3 mb-5 text-gray-800 text-center">Xóa người dùng</h1>
                                </div>
                                <form method="post">
                                    <div class="form-group">
                                        <p>Mã:</p>
                                        <input type="text" class="form-control form-control-user"
                                               disabled
                                               value="@ViewBag.user.CustomerID"
                                               name="ID">
                                    </div>
                                    <div class="form-group">
                                        <p>Họ và tên:</p>
                                        <input type="text" class="form-control form-control-user"
                                               disabled
                                               value="@ViewBag.user.FullName"
                                               name="FullName">
                                    </div>
                                    <div class="form-group">
                                        <p>Số điện thoại:</p>
                                        <input type="tel" class="form-control form-control-user"
                                               disabled
                                               value="@ViewBag.user.PhoneNumber"
                                               name="PhoneNumber">
                                    </div>
                                    <div class="form-group">
                                        <p>Email:</p>
                                        <input type="email" class="form-control form-control-user"
                                               disabled
                                               value="@ViewBag.user.Email"
                                               name="Email">
                                    </div>
                                    @if (!ViewBag.User.is_Admin)
                                    {
                                        <div class="form-group">
                                            <p>Vai trò:</p>
                                            <input type="text" class="form-control form-control-user" disabled name="Role"
                                                   value="Nhân viên" />
                                        </div>
                                    }
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0" style="margin: 2rem auto">
                                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Xác nhận xóa" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="back">
                            <a href="@Url.Action("Index","UserAdmin")" class="text-black"><i style="font-size:1rem; " class="fa">&#xf060;</i></a>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

