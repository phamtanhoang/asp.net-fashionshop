@model IEnumerable<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="position-relative container-fluid">

    @if (TempData.ContainsKey("SuccessMessage"))
    {
        <div class="toast position-absolute show"
             style="top: 1rem; right: 1rem; z-index: 99999; border-radius: 5px; opacity: 0.95">
            <div class="toast-header bg-success text-white">
                <strong class="me-auto">Thông báo</strong>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <p>@TempData["SuccessMessage"]</p>
            </div>
        </div>
    }
    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 div-add">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng:</h6>
            <button onclick="window.location.href='/Admin/UserAdmin/Create'" title="Thêm người dùng"><i class="fa fa-plus"></i></button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="example" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã </th>
                            <th>Tên </th>
                            <th>Tên đăng nhập</th>
                            <th>Số điện thoại</th>
                            <th>Vai trò</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {

                            <tr onclick="window.location.href = '/Admin/UserAdmin/Details/@user.CustomerID'">
                                <td>@user.CustomerID</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>@(user.is_Admin ? "Quản lý" : "Khách hàng")</td>
                                <th style="width:5%">
                                    @if (!user.is_Admin)
                                    {
                                        <a href="/Admin/UserAdmin/Delete/@user.CustomerID" class="btn btn-danger btn-user">Xóa</a>
                                    }
                                </th>
                            </tr>
                        }

                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>


