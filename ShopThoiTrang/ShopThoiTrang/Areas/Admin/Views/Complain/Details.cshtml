
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<div class="container position-relative ">
    <!-- Outer Row -->
    <div class="row justify-content-center container">

        <div class="col-xl-10 col-lg-12 col-md-9 justify-content-center">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">

                        <div class="col-lg-7" style="margin: 0 auto">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h3 mb-5 text-gray-800 text-center">Thông tin góp ý</h1>
                                </div>
                                <form>
                                    <div class="form-group">
                                        <p>Mã:</p>
                                        <input type="text" class="form-control form-control-user"
                                               disabled
                                               value="@ViewBag.complain.ComplainID">
                                    </div>
                                    @{
                                        var user = ShopThoiTrang.Controllers.DataController.getUserByID(@ViewBag.complain.UserID);
                                        <div class="form-group">
                                            <p>Người gửi:</p>
                                            <input type="tel" class="form-control form-control-user"
                                                   disabled
                                                   value="@user.FullName"
                                                   name="PhoneNumber">
                                        </div>
                                    }
                                    <div class="form-group">
                                        <p>Ngày gửi:</p>
                                        <input type="text" class="form-control form-control-user"
                                               disabled
                                               value="@ViewBag.Complain.CreateDate.ToString("dd/MM/yyyy")">
                                    </div>
                                    <div class="form-group">
                                        <p>Nội dung:</p>
                                        <textarea id="description" name="description" style="width:100%;height:100px" disabled>@ViewBag.complain.ComplainContent</textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12 mb-3 mb-sm-0" style="margin:auto">
                                            <a href="mailto:@user.Email" class="btn btn-primary btn-user" style="width:49%">Phản hồi</a>
                                            <a href="/Admin/Complain/Delete/@ViewBag.complain.ComplainID" class="btn btn-danger btn-user" style="width:49%">Xóa</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="back">
                            <a href="@Url.Action("Index","Complain")" class="text-black"><i style="font-size:1rem; " class="fa">&#xf060;</i></a>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

