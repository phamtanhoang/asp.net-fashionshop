@model dynamic
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row" style="width:80%; margin:0 auto">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    <div class="product-preview">
                        <img src="@ViewBag.product.Image" alt="">
                    </div>

                    @foreach (var image in ViewBag.Image)
                    {
                        <div class="product-preview">
                            <img src="@image.Image" alt="">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    <div class="product-preview">
                        <img src="@ViewBag.product.Image" alt="">
                    </div>

                    @foreach (var image in ViewBag.Image)
                    {
                        <div class="product-preview">
                            <img src="@image.Image" alt="">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5 ">
                <div class="product-details container">
                    <h2 class="product-name">@ViewBag.product.ProductName</h2>
                    <div>
                        <h3 class="product-price">@ViewBag.product.UnitPrice.ToString("#,##0 VND")</h3>

                    </div>
                    <p style="font-size:16px;">@ViewBag.product.Description</p>
                    <div class="add-to-cart">
                        
                        <button class="add-to-cart-btn" data-product-id="@ViewBag.product.ProductID" data-product-image="@ViewBag.product.Image" data-product-name="@ViewBag.product.ProductName" data-product-price="@ViewBag.product.UnitPrice"><i class="fa fa-shopping-cart"></i> add to cart</button>
                    </div>

                    <ul class="product-links">
                        <li>Loại sản phẩm:</li>
                        @foreach (var category in ViewBag.Categories)
                        {
                            if (@category.CategoryID == @ViewBag.product.CategoryID)
                            {
                                <li class="product-category">@category.CategoryName</li>
                            }
                        }
                    </ul>

                    <ul class="product-links">
                        <li>Share:</li>
                        <li><a href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="https://twitter.com"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="https://google.com"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="https://gmail.com"><i class="fa fa-envelope"></i></a></li>
                    </ul>

                </div>
            </div>
            <!-- /Product details -->
            <!-- Product tab -->
            <div class="col-md-12">
                <div id="product-tab">
                    <!-- product tab nav -->
                    <ul class="tab-nav">
                    </ul>
                    <!-- /product tab nav -->
                    
                </div>
            </div>
            <!-- /Product tab -->
        </div>
        <!-- /row -->
    </div>
    <!--/container-->
</div>
<!-- /SECTION -->

<!-- Section -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <div class="col-md-12">
                <div class="section-title text-center">
                    <h1 class="title" style="font-weight:600">Sản phẩm khác</h1>
                </div>
            </div>

            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab2" class="tab-pane fade in active">
                            <div class="products-slick" data-nav="#slick-nav-2">
                                <!-- product -->
                                @foreach (var product in ViewBag.Products)
                                {
                                    <div class="product">
                                        <div class="product-img">
                                            <img src="@product.Image" alt="">
                                        </div>
                                        <div class="product-body">
                                            @foreach (var category in ViewBag.Categories)
                                            {
                                                if (@category.CategoryID == @product.CategoryID)
                                                {
                                                    <p class="product-category">@category.CategoryName</p>
                                                }
                                            }
                                            <h3 class="product-name"><a href="~/Shop/Details/@product.ProductID">@product.ProductName</a></h3>
                                            <h4 class="product-price">@product.UnitPrice.ToString("#,##0 VND")</h4>
                                            <div class="product-btns">
                                                <button class="quick-view" onclick="location.href='/Shop/Details/@product.ProductID';"><i class="fa fa-eye"></i><span class="tooltipp">Xem chi tiết</span></button>
                                            </div>
                                        </div>
                                        <div class="add-to-cart">
                                            <button class="add-to-cart-btn" data-product-id="@ViewBag.product.ProductID"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                        </div>
                                    </div>
                                }
                                <!-- /product -->
                            </div>
                            <div id="slick-nav-2" class="products-slick-nav"></div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- /Products tab & slick -->
        </div>

    </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /Section -->
